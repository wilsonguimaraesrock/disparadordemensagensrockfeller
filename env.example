# WhatsApp API Sender - Environment Variables
# Copie este arquivo para .env e configure suas credenciais

# Token da API do WhatsApp
WHATSAPP_API_TOKEN=your_api_token_here

# Configurações específicas por provider
# WAHA
WAHA_BASE_URL=http://localhost:3000
WAHA_INSTANCE_ID=default
WAHA_TOKEN=your_waha_token

# Chat-API
CHAT_API_BASE_URL=https://api.chat-api.com/instance123456
CHAT_API_TOKEN=your_chat_api_token

# Z-API
Z_API_BASE_URL=https://api.z-api.io
Z_API_INSTANCE_ID=your_instance_id
Z_API_TOKEN=your_z_api_token

# UltraMsg
ULTRAMSG_BASE_URL=https://api.ultramsg.com/instance123456
ULTRAMSG_TOKEN=your_ultramsg_token

# Configurações opcionais
LOG_LEVEL=INFO
TIMEOUT_SECONDS=30 